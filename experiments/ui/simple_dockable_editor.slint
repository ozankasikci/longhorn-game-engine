import { Button, VerticalBox, HorizontalBox, ListView, LineEdit, CheckBox, ComboBox, Slider, ScrollView, GroupBox } from "std-widgets.slint";

export struct GameObject {
    id: int,
    name: string,
    position_x: float,
    position_y: float,
    position_z: float,
    rotation_x: float,
    rotation_y: float,
    rotation_z: float,
    scale_x: float,
    scale_y: float,
    scale_z: float,
    active: bool,
}

export struct ConsoleMessage {
    message: string,
    message_type: string,
    timestamp: string,
}

