export component SimpleDockableEditor inherits Window {
    title: "Unity Editor - Simple Docking (Slint)";
    width: 1400px;
    height: 900px;
    background: #1e1e1e;
    
    // Properties
    in property <[GameObject]> scene-objects: [];
    in property <int> selected-object-index: -1;
    in property <[ConsoleMessage]> console-messages: [];
    
    // Panel visibility
    in property <bool> hierarchy-visible: true;
    in property <bool> inspector-visible: true;
    in property <bool> console-visible: true;
    
    // Callbacks
    callback object-selected(int);
    callback object-created();
    callback object-deleted();
    callback scene-clicked(float, float);
    callback tool-selected(string);
    callback console-cleared();
    callback property-changed(string, string);
    
    // Panel management
    callback panel-closed(string);
    callback panel-undocked(string);
    callback window-panel-requested(string);
    callback floating-panel-closed(string);
    callback floating-panel-docked(string);
    
    VerticalBox {
        // Menu bar
        MenuBar {
            window-hierarchy => { window-panel-requested("hierarchy"); }
            window-inspector => { window-panel-requested("inspector"); }
            window-console => { window-panel-requested("console"); }
        }
        
        // Tool bar
        ToolBar {
            tool-selected(tool) => { tool-selected(tool); }
        }
        
        // Main content area
        HorizontalBox {
            // Left panel - Hierarchy
            if hierarchy-visible: DockablePanel {
                width: 250px;
                panel-id: "hierarchy";
                title: "Hierarchy";
                
                panel-closed(id) => { panel-closed(id); }
                panel-undocked(id) => { panel-undocked(id); }
                
                HierarchyPanelContent {
                    objects: scene-objects;
                    selected-object: selected-object-index;
                    object-selected(index) => { object-selected(index); }
                    object-create => { object-created(); }
                    object-delete => { object-deleted(); }
                }
            }
            
            // Center area
            VerticalBox {
                // Scene view
                SceneView {
                    scene-clicked(x, y) => { scene-clicked(x, y); }
                }
                
                // Bottom panel - Console
                if console-visible: DockablePanel {
                    height: 200px;
                    panel-id: "console";
                    title: "Console";
                    
                    panel-closed(id) => { panel-closed(id); }
                    panel-undocked(id) => { panel-undocked(id); }
                    
                    ConsolePanelContent {
                        messages: console-messages;
                        clear-console => { console-cleared(); }
                    }
                }
            }
            
            // Right panel - Inspector
            if inspector-visible: DockablePanel {
                width: 300px;
                panel-id: "inspector";
                title: "Inspector";
                
                panel-closed(id) => { panel-closed(id); }
                panel-undocked(id) => { panel-undocked(id); }
                
                InspectorPanelContent {
                    selected-object: selected-object-index >= 0 && selected-object-index < scene-objects.length ? 
                        scene-objects[selected-object-index] : {
                            id: 0, name: "", position-x: 0, position-y: 0, position-z: 0,
                            rotation-x: 0, rotation-y: 0, rotation-z: 0,
                            scale-x: 1, scale-y: 1, scale-z: 1, active: true
                        };
                    has-selection: selected-object-index >= 0;
                    property-changed(prop, value) => { property-changed(prop, value); }
                }
            }
        }
    }
}